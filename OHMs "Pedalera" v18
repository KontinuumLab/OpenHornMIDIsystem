        snprintf(topString, 5, "L  %d", fxPedal1Val);
      }
      else if(fxPedal1Val < 100){
        snprintf(topString, 5, "L %d", fxPedal1Val);
      }
      else{
        snprintf(topString, 5, "L%d", fxPedal1Val);
      }
