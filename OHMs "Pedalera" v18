  lastPot1Dir = pot1Dir;
  if(fxPedal1Val != lastFxPedal1Val){
    if(fxPedal1Val < lastFxPedal1Val){
      pot1Dir = 0;
    }
    else{
      pot1Dir = 1;
    }
    if(pot1Dir == lastPot1Dir){
      usbMIDI.sendControlChange(NRPN_DataMSB, 0, 1);
      usbMIDI.sendControlChange(NRPN_DataLSB, fxPedal1Val, 1);
      topStringTimer = millis();
      topStringOn = 1;
      dotPos = 1;
